<body>

  <h1>Rock Paper Scissors PvP üéÆ</h1>

  <div id="game">
    <div id="instruction">Choose your move:</div>

    <div class="choices">
      <button class="choice" onclick="choose('rock')">ü™® Rock</button>
      <button class="choice" onclick="choose('paper')">üìÑ Paper</button>
      <button class="choice" onclick="choose('scissors')">‚úÇÔ∏è Scissors</button>
    </div>
  </div>

  <div id="result"></div>

  <script>
    const tg = window.Telegram.WebApp;
    tg.ready();

    // Check for the dark theme using Telegram's WebApp API
    const isDarkMode = tg.colorScheme === 'dark';
    if (isDarkMode) {
      document.body.classList.add('dark-mode');
    }

    // Check if the URL has "p1" parameter (player 1 move)
    const urlParams = new URLSearchParams(window.location.search);
    const p1Choice = urlParams.get('p1');

    function choose(p2Choice) {
      if (p1Choice) {
        // Player 2 plays -> compare choices
        let resultText = `Opponent chose: ${p1Choice}\nYou chose: ${p2Choice}`;

        if (p1Choice === p2Choice) {
          resultText += "\nResult: It's a tie!";
        } else if (
          (p1Choice === 'rock' && p2Choice === 'scissors') ||
          (p1Choice === 'paper' && p2Choice === 'rock') ||
          (p1Choice === 'scissors' && p2Choice === 'paper')
        ) {
          resultText += "\nResult: You lose!";
        } else {
          resultText += "\nResult: You win!";
        }

        document.getElementById('game').style.display = 'none';
        document.getElementById('result').innerText = resultText;
      } else {
        // First player: generate link for second player
        const currentUrl = window.location.origin + window.location.pathname;
        const shareLink = `${currentUrl}?p1=${p2Choice}`;

        document.getElementById('instruction').innerText = "Send this link to your opponent:";
        document.querySelector('.choices').style.display = 'none';

        const linkDiv = document.createElement('div');
        linkDiv.className = 'link';
        linkDiv.innerHTML = `<p><a href="${shareLink}">${shareLink}</a></p>`;
        document.getElementById('game').appendChild(linkDiv);
      }
    }
  </script>

</body>
</html>
