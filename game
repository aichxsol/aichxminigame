      margin: 0;
      padding: 20px;
      transition: background-color 0.3s, color 0.3s;
    }

    h1 {
      color: #0077cc;
    }

    .choices {
      margin-top: 30px;
    }

    .choice {
      background-color: #0077cc;
      color: white;
      border: none;
      padding: 15px 30px;
      margin: 10px;
      font-size: 20px;
      border-radius: 10px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .choice:hover {
      background-color: #005fa3;
    }

    #result {
      margin-top: 30px;
      font-size: 22px;
      font-weight: bold;
      color: #333;
    }

    .link {
      margin-top: 20px;
      word-break: break-word;
      color: #0077cc;
    }

    a {
      color: #0077cc;
      text-decoration: underline;
    }

    /* Dark mode styles */
    body.dark-mode {
      background-color: #333;
      color: white;
    }

    body.dark-mode h1 {
      color: #00d1b2;
    }

    body.dark-mode .choice {
      background-color: #00d1b2;
    }

    body.dark-mode .choice:hover {
      background-color: #009b8c;
